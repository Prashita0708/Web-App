<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fa fa-user-circle-o fa-5x" aria-hidden="true"></i>
    <h1 class="display-3">My Profile</h1>
    <p class="secret-text">Build a profile so that people know you!</p>

    <form action="/submit" method="POST">

      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="What's your Name?">
      </div>
      <div class="form-group">
        <label>Add a Bio</label>
        <input type="text" class="form-control" name="bio" placeholder="Say something about yourself">
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
<%- include('partials/footer') %>
